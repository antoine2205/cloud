@page
@model RailDelay.Pages.Stations.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Train station</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.LocationX)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.LocationX)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.LocationY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.LocationY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.URL)
        </dd>
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            <div class="form-group row col-sm-4">
                <img src="@Model.UrlPictureStation" class="imageThumbnail" asp-append-version="true" />
            </div>
        </dd>
    </dl>
</div>
<div>
    <!-- <a asp-page="./Edit" asp-route-id="@Model.Station.ID">Edit</a> | -->
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".imageThumbnail").on("error", function(){
                $(".imageThumbnail").attr('src', './../images/image-not-available-hi.png');
            });
        });
    </script>
    }
